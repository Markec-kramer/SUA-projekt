      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is ok\", function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('ok');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4007/healthz",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4007",
          "path": ["healthz"]
        },
        "description": "Preveri zdravje storitve"
